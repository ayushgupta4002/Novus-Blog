<%- include("partials/headermain"); -%>
    <div class="main-wrapper">
	    
	    <section class="cta-section theme-bg-light py-5">
		    <div class="container text-center single-col-max-width">
			    <h2 class="heading">Welcome to this Blog</h2>
			    <div class="intro">Experience Teaches ,Why not share it. Share your Experiences and Stories anonymously <a href="/contactuser">here</a></div>
			    <div class="single-form-max-width pt-3 mx-auto">
				    <form class="signup-form row g-2 g-lg-2 align-items-center" action="/review" method="post">
	                    <div class="col-12 col-md-9">
	                        <label class="sr-only" for="semail"></label>
	                        <input type="text" id="text" name="review" class="form-control me-md-1 " placeholder="Please share your review">
	                    </div>
	                    <div class="col-12 col-md-2">
	                        <button type="submit" class="btn btn-primary">Send</button>
	                    </div>
	                </form>
			    </div>
		    </div>
	    </section>
	    
	    
	    <section class="blog-list px-3 py-5 p-md-5">
		    <div class="container single-col-max-width">
			  


			 <%  posts.forEach(function(post){ %>
			    <div class="item mb-5">
				    <div class="row g-3 g-xl-0">
					    <div class="col-2 col-xl-3">
					        <img class="img-fluid post-thumb" src="<%=post.img%>" alt="image">
					    </div>
					    <div class="col">
						    <h3 class="title mb-1"><a class="text-link" href="/post/<%=post._id%>"><%= post.title%></a></h3>
						    <div class="meta mb-1"><span class="date"><%=post.rdtime%></span><span class="time"></span><span class="comment"><a class="text-link" href="#"></a></span></div>
						    <div class="intro"><%=post.content.substring(0, 180) + " ..."%></div>
						    <a class="text-link" href="/post/<%=post._id%>">Read more &rarr;</a>
					    </div>
				    </div>
			    </div>
				<% }); %>
			    
			    
			    
			    
			    
			   
			    
			 
				
		    </div>
	    </section>
	    
		<%- include("partials/footermain"); -%>
    </div>

       
    <!-- Javascript -->          
    <script src="/plugins/popper.min.js"></script> 
    <script src="/plugins/bootstrap/js/bootstrap.min.js"></script> 

    

</body>
</html> 

